{
  "name": "crypto-oracle",
  "version": "1.0.0",
  "description": "Crypto Oracle - AI-Powered Cryptocurrency Analysis Platform",
  "private": true,
  "scripts": {
    "install:all": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && uvicorn server:app --reload --host 0.0.0.0 --port 8000",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm run build",
    "test": "echo \"Tests not yet configured\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodyDvorak/CryptoOracle.git"
  },
  "keywords": [
    "crypto",
    "cryptocurrency",
    "trading",
    "ai",
    "machine-learning",
    "analysis"
  ],
  "author": "Cody Dvorak",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
